<h1>Tasks' list</h1>
<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="fa-solid fa-square-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>
<p><%= link_to 'Add a new task', new_task_path %></p>
